# Set basic environment variables for local development
FLASK_APP=wsgi.py
FLASK_ENV=development
FLASK_DEBUG=True
DEPLOYMENT_PLATFORM=GCP
DEPLOYMENT_ENV=development
PORT=8080

# Database configuration - using minimal settings for development
# For local development, you may want to set up a local PostgreSQL database

# Optional: Set these if you have a local PostgreSQL setup
# NOTIFY_DATABASE_HOST=localhost
# NOTIFY_DATABASE_PORT=5432
# NOTIFY_DATABASE_NAME=notify_delivery
# NOTIFY_DATABASE_USERNAME=notify_user
# NOTIFY_DATABASE_PASSWORD=notify_password
NOTIFY_DATABASE_SCHEMA=public

# Disable external services for local development
VERIFY_PUBSUB_VIA_JWT=false